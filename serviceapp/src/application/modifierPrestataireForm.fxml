<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ModifierPrestataireController">
   <children>
      <!-- Main Content -->
      <HBox alignment="CENTER" spacing="20.0" HBox.hgrow="ALWAYS">
         <children>
            <!-- Form Section -->
            <VBox alignment="CENTER" prefHeight="700.0" prefWidth="400.0" spacing="15.0">
               <children>
                  <Label alignment="CENTER" prefHeight="57.0" prefWidth="153.0" style="-fx-font-size: 14; -fx-font-weight: bold;" text="Modifier le Prestataire">
                     <font>
                        <Font name="Bauhaus 93" size="1.0" />
                     </font>
                  </Label>
                  <!-- Form Fields -->
                  <VBox spacing="10.0">
                     <!-- Nom Complet -->
                     <VBox>
                        <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="Nom Complet" />
                        <HBox prefHeight="25.0" prefWidth="327.0" spacing="10.0">
                           <TextField fx:id="firstNameField" prefHeight="25.0" prefWidth="165.0" promptText="Prénom" />
                           <TextField fx:id="lastNameField" prefHeight="25.0" prefWidth="181.0" promptText="Nom" />
                        </HBox>
                        <Label fx:id="nameErrorLabel" style="-fx-text-fill: red; -fx-font-size: 12;" text="" />
                     </VBox>

                     <!-- Métier -->
                     <VBox>
                        <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="Métier" />
                        <ComboBox fx:id="MétierField" prefHeight="25.0" prefWidth="357.0" />
                        <Label fx:id="métierErrorLabel" style="-fx-text-fill: red; -fx-font-size: 12;" text="" />
                     </VBox>

                     <!-- Ville -->
                     <VBox>
                        <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="Ville" />
                        <ComboBox fx:id="villeField" prefHeight="25.0" prefWidth="357.0" />
                        <Label fx:id="villeErrorLabel" style="-fx-text-fill: red; -fx-font-size: 12;" text="" />
                     </VBox>

                     <!-- Téléphone -->
                     <VBox>
                        <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="Numéro de téléphone" />
                        <TextField fx:id="phoneField" prefWidth="320.0" promptText="Numéro de téléphone" />
                        <Label fx:id="phoneErrorLabel" style="-fx-text-fill: red; -fx-font-size: 12;" text="" />
                     </VBox>

                     <!-- Email -->
                     <VBox>
                        <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="Email" />
                        <TextField fx:id="emailField" prefWidth="320.0" promptText="Email" />
                        <Label fx:id="emailErrorLabel" style="-fx-text-fill: red; -fx-font-size: 12;" text="" />
                     </VBox>

                     <!-- Description -->
                     <VBox>
                        <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="Description" />
                        <TextField fx:id="descriptionField" prefWidth="320.0" promptText="Description du Prestataire" />
                        <Label fx:id="descriptionErrorLabel" style="-fx-text-fill: red; -fx-font-size: 12;" text="" />
                     </VBox>

                     <!-- Prix -->
                     <VBox>
                        <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="Tarif" />
                        <TextField fx:id="tarifField" prefWidth="320.0" promptText="Tarif" />
                        <Label fx:id="priceErrorLabel" style="-fx-text-fill: red; -fx-font-size: 12;" text="" />
                     </VBox>

                     <VBox />

                  </VBox>

                  <!-- Buttons -->
                  <HBox spacing="15.0" />
                  <Button fx:id="addButtonID" onAction="#modifierPrestataire" prefWidth="150.0" style="-fx-background-color: #5687FD; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;" text="Modifier" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</HBox>
