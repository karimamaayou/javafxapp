<HBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AddReservationController">
   <children>
      <VBox prefHeight="700.0" prefWidth="125.0" style="-fx-background-color: #5687FD;">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ImageView fitHeight="125.0" fitWidth="138.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../Desktop/WhatsApp%20Image%202024-11-23%20à%2019.16.21_69a6f61d.jpg" />
                     </image>
                  </ImageView>
                  <Button alignment="TOP_LEFT" mnemonicParsing="false" prefHeight="82.0" prefWidth="126.0" style="-fx-background-color: transparent;" text="Clients" textFill="WHITE">
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                  </Button>
                  <Button alignment="TOP_LEFT" mnemonicParsing="false" prefHeight="25.0" prefWidth="144.0" style="-fx-background-color: #5687FD;" text="Prestataires" textFill="WHITE" />
                  <Button fx:id="viewReservatioButtonID" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#viewReservationButton" prefHeight="45.0" prefWidth="115.0" style="-fx-background-color: transparent;" text="Reservations" textFill="WHITE" />
