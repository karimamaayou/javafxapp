<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.modifierReservationController">
   <children>
      <HBox alignment="CENTER" spacing="20.0" HBox.hgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER" prefHeight="700.0" prefWidth="400.0" spacing="15.0">
               <children>
                  <Label alignment="CENTER" prefHeight="57.0" prefWidth="153.0" style="-fx-font-size: 14; -fx-font-weight: bold;" text="Modifier Reservation">
                     <font>
                        <Font name="Bauhaus 93" size="1.0" />
                     </font>
                  </Label>
                  <VBox spacing="10.0">
                     <children>
                        <VBox>
                           <children>
                              <HBox prefHeight="25.0" prefWidth="327.0" spacing="10.0" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="client" />
                              <ComboBox fx:id="clientField" prefHeight="25.0" prefWidth="357.0" />
                              <Label fx:id="clientErrorLabel" style="-fx-text-fill: red; -fx-font-size: 12;" text="" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="prestataire" />
                              <ComboBox fx:id="prestataireField" prefHeight="25.0" prefWidth="357.0" />
                              <Label fx:id="prestataireErrorLabel" style="-fx-text-fill: red; -fx-font-size: 12;" text="" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="date debut" />
                              <DatePicker fx:id="dateDebutField" prefHeight="26.0" prefWidth="357.0" />
                              <Label fx:id="dateDebutErrorLabel" style="-fx-text-fill: red; -fx-font-size: 12;" text="" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="date fin" />
                              <DatePicker fx:id="dateFinField" prefHeight="26.0" prefWidth="358.0" />
                              <Label fx:id="dateFinErrorLabel" style="-fx-text-fill: red; -fx-font-size: 12;" text="" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="Prix " />
                              <TextField fx:id="PriceField" prefWidth="320.0" promptText="entrer prix" />
                              <Label fx:id="priceErrorLabel" style="-fx-text-fill: red; -fx-font-size: 12;" text="" />
                           </children>
                        </VBox>
                        <VBox />
                     </children>
                  </VBox>
                  <HBox spacing="15.0" />
                  <Button fx:id="modifierButtonId" onAction="#modifierReservation" prefWidth="150.0" style="-fx-background-color: #5687FD; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;" text="Modifier" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</HBox>
